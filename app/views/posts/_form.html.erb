
<%= form_for @post do |f| %>
  <p>
  <%= f.label :title %><br>
  <%= f.text_field :title %>
  </p>
  <p>
  <%= f.label :content %><br>
  <%= f.text_area :content %>
  </p>
  <p>
   <%= f.label :image %><br>
   <%= f.text_field :image %>
  </p>

  <p>
  <%= f.label :category_id, 'Category' %>
  <%= f.collection_select :category_id, Category.all, :id, :name, prompt: 'Please choose or edit a category:' %>
  </p>

  <p>
  <%= f.submit %>
  </p>

<% end %>
