<% if flash[:errors].present?  %>
   <strong>Please correct the following errors:</strong>
   <ol>
   <% flash[:errors].each do |error| %>
     <li><%= error %></li>
   <% end %>
   </ol>
<% end %>

<h1>Create a Tip/Trick</h1>
<%= form_for @post do |f| %>
  <p>
  <%= f.label :title %><br>
  <%= f.text_field :title %>
  </p>
  <p>
  <%= f.label :content %><br>
  <%= f.text_area :content %>
  </p>
  <p>
   <%= f.label :image %><br>
   <%= f.text_field :image %>
  </p>

  <p>
  <%= f.label :category_id, 'Category' %>
  <%= f.collection_select :category_id, Category.all, :id, :name, prompt: 'Please choose or edit a category:' %>
  </p>

  <p>
  <%= f.submit %>
  </p>

<% end %>
