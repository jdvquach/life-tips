<h2><%= @post.title %></h2>
<br>
<%= @post.content %>
<hr>
<% if @post.image.present? %>
<%= image_tag @post.image, class: 'postTitle' %>
<% end %>
<br>

<!--Only show post for user login  -->
<% if @current_user.present? && @post.user == @current_user  %>
<%= link_to 'Edit Post', edit_post_path(@post) %>
<% end  %>
